{
  "name": "business-support-backend",
  "version": "1.0.0",
  "description": "Backend API for business support platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node src/utils/migrate.ts",
    "db:seed": "ts-node src/utils/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0",
    "joi": "^17.9.2",
    "dotenv": "^16.1.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.1",
    "@types/node": "^20.2.5",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
